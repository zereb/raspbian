# ake sxhkd reload its configuration files:
super + Delete
	pkill -USR1 -x sxhkd && dunstify -u critical "sxhkd" "Configuration reloaded!"


# BSPWM HOTKEYS

# quit/restart bspwm
super + shift + {Delete, r}
	bspc {quit,wm -r}

# close and kill
super + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# set the window state
super + {t,shift + t,space,f}
	bspc node -t {tiled,pseudo_tiled,~floating,~fullscreen}

# FOCUS/SWAP

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }n
	bspc node -f {next,prev}.local

# focus or send to the given desktop
super + {_,shift + }{1-4,8,9,0}
	bspc {desktop -f,node -d} focused:'^{1-4,5,6,7}'

# MOVE/RESIZE

# expand a window by moving one of its side outward
super + {y,u,o,p}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + shift + {y,u,o,p}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window

super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# GENERAL
XF86AudioRaiseVolume
	amixer set Master 5%+
XF86AudioLowerVolume
	amixer set Master 5%-


# APPLICATION KEYBINDINGS
super + b
			qutebrowser
super + r
			kitty -e ranger
super + Return
			alacritty
super + d
			rofi -show drun 
super + 
			rofi -show run
alt + Tab
			rofi -show window -theme ~/.config/rofi/dracula.rasi
Print
    scrot ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png


